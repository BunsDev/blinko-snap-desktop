{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blinko Snap",
  "version": "0.1.0",
  "identifier": "com.blinko-snap.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "skipTaskbar": true,
        "decorations": false,
        "fullscreen": false,
        "height": 300,
        "width": 600,
        "resizable": false,
        "center": true,
        "title": "blinko-snap",
        "visible": false,
        "maximized": false,
        "transparent": true,
        "alwaysOnTop": true,
        "windowEffects": {
          "effects": [
            "mica"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "resources": [
      "icons/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "sqlite": {
        "path": "blinko.db"
      }
    },
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJGRjkxRUZDMkQ5REI2NDIKUldSQ3RwMHQvQjc1THpMMmVhWmczb1ZJRDFlSXQxOWlGSDRqeHhSWFVDQlhJUnFzbndUeGRxUWQK",
      "endpoints": [
        "https://github.com/blinko-space/blinko-snap/releases/latest/download/latest.json"
      ]
    }
  }
}