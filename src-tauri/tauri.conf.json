{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "blinko-snap",
  "version": "0.1.0",
  "identifier": "com.blinko-snap.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "height": 300,
        "width": 600,
        "resizable": false,
        "center": true,
        "title": "blinko-snap",
        "visible": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "sqlite": {
        "path": "blinko.db"
      }
    }
  }
}
